<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="author" lang="fr" content="Salaha SOKHONA">
		<meta name="copyright" content="Salaha SOKHONA."/>
		<meta name="description" content="Le Vingtième c'est la cuisine de toutes les gourmandises, alliant jus pressés minute de fruits et légumes & cocktails maison, recettes savoureuses..."/>
		<meta name="viewport" content="width=device-width">
		<title>
			Le Vingtième
			{% block title %}{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;400;500;600;800&display=swap" rel="stylesheet">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link href="{{ asset('css/normalize.css') }}" rel="stylesheet" type="text/css"/>
			<link href="{{ asset('css/loader.css') }}" rel="stylesheet" type="text/css"/>
			<link href="{{ asset('css/navbar.css') }}" rel="stylesheet" type="text/css"/>
			<link href="{{ asset('css/footer.css') }}" rel="stylesheet" type="text/css"/>
		{% endblock %}
	</head>

	<body>
		{% block body %}
			<div id="loader">
				<h2>
					<span class="loader-word loader-word-1">Le</span>
					<span class="loader-word loader-word-2">Ving</span>
					<span class="loader-word loader-word-3">t</span>
					<span class="loader-word loader-word-4">ième</span>
				</h2>
			</div>
			<div id="global-container">
				<nav id="navbar" class="navbar navbar-expand-lg">
					{% include('_navbar.html.twig') %}
				</nav>
				{% block background %}
					<div class="bg-doodle">
						<css-doodle use="var(--rule)"></css-doodle>
					</div>
				{% endblock %}
				<main>
					{% block main %}{% endblock %}
				</main>
				<footer class="container-fluid bg-dark row g-0">
					{% include('_footer.html.twig') %}
				</footer>
			</div>
		{% endblock %}
		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>
			<script src="https://unpkg.com/css-doodle@0.40.6/css-doodle.min.js"></script>
			<script src="{{ asset('js/script/const.js') }}"></script>
			<script src="{{ asset('js/script/navbar-scroll.js') }}"></script>
			<script>
				window.addEventListener("load", () => {
					loader.style.display = "none";
					globalContainer.style.opacity = "1";
				});
			</script>
		{% endblock %}
	</body>
</html>
