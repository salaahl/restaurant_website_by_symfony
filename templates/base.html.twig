<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="author" lang="fr" content="Salaha SOKHONA">
		<meta name="copyright" content="Salaha SOKHONA."/>
		<meta name="description" content="Le Vingtième c'est la cuisine de toutes les gourmandises, alliant jus pressés minute de fruits et légumes & cocktails maison, recettes savoureuses..."/>
		<meta name="viewport" content="width=device-width">
		<title>
			Le Vingtième |
			{% block title %}Votre destination gourmande
			{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('build/images/favicon.svg') }}" type="image/x-icon">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;400;500;600;800&display=swap" rel="stylesheet">
		{% block stylesheets %}
			{{ encore_entry_link_tags('global_styles') }}
			{% block extra_css %}{% endblock %}
		{% endblock %}
	</head>

	<body>
		{% block body %}
			{% include('components/loader.html.twig') %}
			<div id="global-container" class="hide">
				<nav id="navbar" class="navbar navbar-expand-lg">
					{% include('components/navbar.html.twig') %}
				</nav>
				{% block background %}
					<div class="bg-doodle">
						<css-doodle use="var(--rule)"></css-doodle>
					</div>
				{% endblock %}
				<main>
					{% for message in app.flashes('error') %}
						<div class="alert alert-danger">
							{{ message }}
						</div>
					{% endfor %}
					{% for message in app.flashes('success') %}
						<div class="alert alert-success">
							{{ message }}
						</div>
					{% endfor %}
					{% block main %}{% endblock %}
				</main>
				<footer class="container-fluid bg-dark row g-0">
					{% include('components/footer.html.twig') %}
				</footer>
			</div>
		{% endblock %}
		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>
			<!-- permet de générer le fond d'écran custom -->
			<script src="https://unpkg.com/css-doodle@0.40.6/css-doodle.min.js"></script>
			{{ encore_entry_script_tags('app_js') }}
			{% block extra_js %}{% endblock %}
		{% endblock %}
	</body>
</html>
