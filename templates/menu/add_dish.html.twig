{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau plat
{% endblock %}

{% block stylesheets %}
	<link href="{{ asset('css/add_form.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}
	{{ 
		form_start(form, 
		{
			'method': 'POST',
			'attr': {
				'id': 'form-dish',
				'class': 'form',
			}
		}) 
	}}
	<h1>Ajouter un nouveau plat :</h1>
	<p class='field required'>
		{{
			form_widget(form.name, {
				'attr': {
					'class': 'text-input',
					'placeholder': 'Nom du plat'
				},
				'label': 'Nom', 
				'label_attr': {
					'class': 'label'
				},
			}) 
		}}
	</p>
	<p class='field required'>
		{{
			form_widget(form.description, {
				'attr': {
					'class': 'textarea',
					'placeholder': '100 caract√®res maximum.'
				},
				'label': 'Description', 
				'label_attr': {
					'class': 'label'
				},
			}) 
		}}
	</p>
	<p class='field required'>
		{{
			form_widget(form.price, {
				'attr': {
					'class': 'text-input',
					'placeholder': '9.99'
				},
				'label': 'Prix', 
				'label_attr': {
					'class': 'label'
				},
			}) 
		}}
	</p>
	<div class='field required'>
		<label class='label'>Type</label>
		<ul class='checkboxes'>
			<li class='checkbox'>
				{{
					form_widget(form.type) 
				}}
			</li>
		</ul>
	</div>
	<p class='field'>
		<input class='button' type='submit' value='Send'>
	</p>
</form>{% endblock %}{% block javascript %}
