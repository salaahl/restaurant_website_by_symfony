{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau menu
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<link href="{{ asset('css/normalize.css') }}" rel="stylesheet" type="text/css"/>
	<link href="{{ asset('css/add_form.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}
	{{ 
		form_start(form, 
		{
			'method': 'POST',
			'attr': {
				'id': 'form-menu',
				'class': 'form',
			}
		}) 
	}}
	<h1>Ajouter un nouveau menu :</h1>
	<p class='field required'>
		{{ 
			form_widget(form.type, 
			{
				'attr': {
					'class': 'text-input',
					'placeholder': 'Nom du menu'
				},
				'label': 'Ajouter un nouveau menu à la carte', 
				'label_attr': {
					'class': 'label'
				},
			}) 
		}}
	</p>
	<p class='field required'>
		<input class='text-input' name='confirm' type='text' placeholder="Entrez à nouveau le nom du menu">
	</p>
	<p class='field'>
		<input class='button' type='submit' value='Send'>
	</p>
	{{ form_end(form) }}
{% endblock %}

{% block javascript %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js" integrity="sha512-rstIgDs0xPgmG6RX1Aba4KV5cWJbAMcvRCVmglpam9SoHZiUCyQVDdH2LPlxoHtrv17XWblE/V/PP+Tr04hbtA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/additional-methods.min.js" integrity="sha512-6S5LYNn3ZJCIm0f9L6BCerqFlQ4f5MwNKq+EthDXabtaJvg3TuFLhpno9pcm+5Ynm6jdA9xfpQoMz2fcjVMk9g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<script src="{{ asset('js/ajax/form_validator.js') }}"></script>
{% endblock %}
